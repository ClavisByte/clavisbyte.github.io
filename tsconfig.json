{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/utils/*"],
      "@i18n/*": ["src/i18n/*"],
      "@layouts/*": ["src/layouts/*"],
      "@/*": ["src/*"],

      "@icons/*": ["src/icons/*"],
      "@logo/*": ["src/icons/logo/*"]
    }
  },
  "include": ["src/**/*"]
}
