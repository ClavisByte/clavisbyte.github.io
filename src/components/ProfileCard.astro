---
import { Image } from "astro:assets";
import Menu from "../components/ProfileCardMenu.astro";
import Footer from "../components/ProfileCardFooter.astro";
import { USER_AVATAR } from "../consts";
---

<div
  class="rounded-xl flex-col gap-2 mb-4 w-full sticky md:sticky lg:relative card bg-base-100 border-2 p-4 transition-colors"
>
  <div class="avatar p-2">
    <Image
      class="mask mask-circle"
      format="webp"
      width={300}
      height={300}
      src={USER_AVATAR}
      alt="Profile"
      loading="eager"
    />
  </div>
  <Footer />
  <Menu />
</div>
